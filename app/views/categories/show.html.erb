<h1><%= @category.name %><small><%= link_to 'Back', categories_path %> |<%= link_to 'Edit', edit_category_path(@category) %></small></h1>

    <% @category.products.each do |product| %>

        <h3><%= link_to product.title, [product.category, product] %></h3>
        <h6>Written by <a href="#">Ryba≈Çke</a> on <%= product.created_at %></h6>
        <%= link_to 'Edit', edit_product_path(product) %> |<%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        <p><%= product.content %></p>

      <hr />

    <% end %>
